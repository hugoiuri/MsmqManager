@model IEnumerable<MsmqManager.Web.Models.QueueModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <h2>QueueList</h2>

    <table id="QueueList" class="table table-striped table-hover table-condensed table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AmountMessages)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.AmountMessages == 0 ? "queueEmpty" : "")">
                    <td>
                        @item.AmountMessages.ToString("N0")
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(function () {
        $("#QueueList").tablesorter({ sortList: [[0, 1], [1, 0]], usNumberFormat: false });
    });
</script>
