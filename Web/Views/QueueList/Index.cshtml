@model IEnumerable<MsmqManager.Web.Models.QueueModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>QueueList</h2>

    <table id="QueueList" class="table table-striped table-hover table-condensed table-bordered">
        <thead>
            <tr>
                <th>Number of messages</th>
                <th>Name</th>
                <th>Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.AmountMessages == 0 ? "queueEmpty" : "queueNormal")">
                    <td>@item.AmountMessages.ToString("N0")</td>
                    <td>@item.Name</td>
                    <td>@Html.ActionLink("Details", "Details", new { name=item.Name }, new { @class = "btn btn-mini" })</td>
                </tr>
            }
        </tbody>
    </table>

<script type="text/javascript">
    $(function () {
        $("#QueueList").tablesorter({
            sortList: [[0, 1], [1, 0]],
            usNumberFormat: false,
            headers: { 2: { sorter: false } }
        });
    });
</script>
